{
  "name": "javascriptair.com",
  "version": "1.0.0",
  "private": true,
  "description": "The JavaScript Air site",
  "main": "app/index.js",
  "scripts": {
    "prebuild:index": "npm run eslint || x=1",
    "prebuild:episode": "npm run eslint || x=1",
    "build:index": "babel-node generate/home > index.html",
    "build:episodes": "./scripts/build-episodes.sh",
    "build:episode": "./scripts/build-episode.sh",
    "prebuild:guests": "rm -rf guests && mkdir guests",
    "build:guests": "babel-node generate/guests > guests/index.html",
    "build:css": "postcss -u postcss-import -u postcss-nested -u autoprefixer -u cssnano resources/css/styles.css > styles.dist.css",
    "build": "npm run build:index && npm run build:episodes && npm run build:guests && npm run build:css",
    "prebuild": "npm run eslint",
    "deploy": "./scripts/deploy.sh",
    "getShortUrl": "babel-node ./scripts/shorten-url",
    "dev": "nodemon --watch src --watch sponsors --watch episodes --watch shared --watch generate --exec npm run build:index -s",
    "dev:episode": "nodemon --watch src --watch sponsors --watch episodes --watch shared --watch generate --exec npm run build:episode -s",
    "dev:guests": "nodemon --watch src --watch sponsors --watch episodes --watch shared --watch generate --exec npm run build:guests -s",
    "dev:css": "nodemon --watch resources/css --ext css --exec npm run build:css",
    "description": "babel-node other/generate-episode-description",
    "eslint": "eslint src/ episodes/ shared/ other/ generate/",
    "server": "http-server",
    "test": "echo \"Error: no test specified.\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/javascriptair/javascriptair.github.io.git"
  },
  "author": "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/javascriptair/javascriptair.github.io/issues"
  },
  "config": {
		"ghooks": {
			"pre-commit": "npm run eslint"
		}
	},
  "homepage": "https://github.com/javascriptair/javascriptair.github.io#readme",
  "devDependencies": {
    "autoprefixer": "6.2.1",
    "axios": "0.8.1",
    "babel-cli": "6.2.0",
    "babel-core": "6.1.21",
    "babel-preset-es2015": "6.1.18",
    "babel-preset-react": "6.1.18",
    "babel-preset-stage-2": "6.1.18",
    "copy-paste": "1.1.4",
    "cssnano": "3.4.0",
    "deindent": "0.1.0",
    "eslint": "1.9.0",
    "eslint-config-kentcdodds": "5.0.0",
    "eslint-loader": "1.1.1",
    "eslint-plugin-mocha": "1.1.0",
    "eslint-plugin-react": "3.9.0",
    "ghooks": "1.0.3",
    "glob": "6.0.1",
    "http-server": "0.8.5",
    "inquirer": "0.11.0",
    "inquirer-directory": "1.1.3",
    "lodash": "3.10.1",
    "markdown": "0.5.0",
    "moment": "2.10.6",
    "nodemon": "1.8.1",
    "postcss-cli": "2.3.2",
    "postcss-import": "7.1.3",
    "postcss-nested": "^1.0.0",
    "qs": "6.0.1",
    "query-string": "3.0.0",
    "react": "0.14.2",
    "react-dom": "0.14.2",
    "read-glob": "2.1.0",
    "surge": "0.17.3",
    "trash": "3.4.0",
    "uglify-js": "2.6.1"
  }
}
